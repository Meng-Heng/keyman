{
  "extends": "../tsconfig.kmw-main-base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": [ "dom", "es6" ],
    "outDir": "./build/obj/",
    "rootDir": "./src/engine",
    "tsBuildInfoFile": "./build/obj/tsconfig.tsbuildinfo",
    // The TS tests appear to reference this value, despite not being the tsconfig the tests are
    // supposed to reference.  So, can't drop it -quite- yet.
    "noImplicitAny": false
  },
  "include": ["./src/engine/**/*.ts"],
  "exclude": ["./src/test/**/*.ts", "./src/tools/**/*.ts"],
  "references": [
    { "path": "../utils" }
  ]
}
